{
  "name": "sistema-vendas-perfumes-backend",
  "version": "3.1.0",
  "description": "Backend para sistema de vendas de perfumes com checkout via WhatsApp",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "test": "cross-env NODE_ENV=test vitest run --pool=threads --poolOptions.threads.singleThread",
    "test:unit": "vitest run --config=vitest.unit.config.js",
    "test:integration": "vitest run --config=vitest.integration.config.js",
    "test:watch": "cross-env NODE_ENV=test vitest",
    "test:coverage": "cross-env NODE_ENV=test vitest run --coverage",
    "test:ui": "cross-env NODE_ENV=test vitest --ui",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:test:migrate": "dotenv -e .env.test -- prisma migrate deploy",
    "prisma:seed": "node prisma/seed.js",
    "postinstall": "prisma generate",
    "prepare": "husky install"
  },
  "dependencies": {
    "@prisma/client": "^6.19.1",
    "@uploadcare/upload-client": "^6.18.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.0",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^1.6.1",
    "@vitest/ui": "^1.6.1",
    "cross-env": "^10.1.0",
    "dotenv-cli": "^11.0.0",
    "eslint": "^8.56.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "nodemon": "^3.1.10",
    "prettier": "^3.1.1",
    "prisma": "^6.19.1",
    "supertest": "^6.3.4",
    "vitest": "^1.6.1"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.prisma": [
      "prettier --write"
    ]
  },
  "keywords": [
    "perfumes",
    "ecommerce",
    "whatsapp",
    "backend"
  ],
  "author": "Caio César, Jéferson Ramos, Matheus Jorge, Nífane Borges e Vinícius Amorim",
  "license": "MIT"
}
